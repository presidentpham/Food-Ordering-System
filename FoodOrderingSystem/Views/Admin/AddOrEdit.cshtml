@model FoodOrderingSystem.Models.Product

@{
    ViewData["Title"] = Model.Id == 0 ? "Add Product" : "Edit Product";
    string actionTitle = Model.Id == 0 ? "Add Product" : "Edit Product";
}

<!-- Page Title -->
<h2 class="text-center my-5 text-primary">
    <i class="fas fa-plus-circle"></i> ADD NEW FOOD
</h2>

<div class="container">
    <!-- Card Container for Form -->
    <div class="card shadow-lg rounded-lg p-4">
        <form asp-action="AddOrEdit" method="post">

            <!-- Product ID (Hidden) -->
            <div class="form-group">
                <input type="hidden" asp-for="Id" />
            </div>

            <!-- Product Name -->
            <div class="form-group">
                <label asp-for="Name" class="control-label font-weight-bold">
                    <i class="fas fa-pizza-slice"></i> Food Name
                </label>
                <input asp-for="Name" class="form-control form-control-lg" placeholder="Enter food name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <!-- Description -->
            <div class="form-group">
                <label asp-for="Description" class="control-label font-weight-bold">
                    <i class="fas fa-align-left"></i> Description
                </label>
                <textarea asp-for="Description" class="form-control form-control-lg" rows="4" placeholder="Enter food description"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <!-- Price -->
            <div class="form-group">
                <label asp-for="Price" class="control-label font-weight-bold">
                    <i class="fas fa-dollar-sign"></i> Price
                </label>
                <input asp-for="Price" type="number" step="0.01" class="form-control form-control-lg" placeholder="Enter food price" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <!-- Image URL -->
            <div class="form-group">
                <label asp-for="ImageUrl" class="control-label font-weight-bold">
                    <i class="fas fa-image"></i> Image URL
                </label>
                <input asp-for="ImageUrl" class="form-control form-control-lg" placeholder="Enter food image URL" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>

            <!-- Action Buttons -->
            <div class="form-group text-center">
                <button type="submit" class="btn btn-success btn-lg px-5 py-3 mt-3">
                    <i class="fas fa-save"></i> Save
                </button>
                <a asp-action="Dashboard" class="btn btn-secondary btn-lg px-5 py-3 mt-3">
                    <i class="fas fa-times-circle"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
